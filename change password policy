chage -l user

vim /etc/pam.d/system-auth //remember=5
password   sufficient   pam_unix.so sha512 shadow nullok try_first_pass use_authtok remember=5

vi /etc/pam.d/system-auth  //minlen=7
password   requisite   pam_cracklib.so retry=3 difok=3 minlen=7

vim /etc/login.defs 
PASS_MAX_DAYS   90
PASS_MIN_DAYS   0
PASS_MIN_LEN    7
PASS_WARN_AGE   7

chage -E 3/30/2017 -m 5 -M 90 -I 30 -W 14 user
